[loggers]
keys=root,app,database,s3

[handlers]
keys=console,file,cloudwatch

[formatters]
keys=detailed,simple

[logger_root]
level=INFO
handlers=console,cloudwatch

[logger_app]
level=DEBUG
handlers=console,file,cloudwatch
qualname=app
propagate=0

[logger_database]
level=WARNING
handlers=console,cloudwatch
qualname=database
propagate=0

[logger_s3]
level=INFO
handlers=console,cloudwatch
qualname=s3
propagate=0

[handler_console]
class=StreamHandler
level=DEBUG
formatter=simple
args=(sys.stdout,)

[handler_file]
class=FileHandler
level=INFO
formatter=detailed
args=('/var/log/lms/app.log', 'a')

[handler_cloudwatch]
class=watchtower.CloudWatchLogHandler
level=INFO
formatter=detailed
args=()

[formatter_detailed]
format=%(asctime)s - %(name)s - %(levelname)s - %(message)s
datefmt=%Y-%m-%d %H:%M:%S

[formatter_simple]
format=%(levelname)s - %(message)s