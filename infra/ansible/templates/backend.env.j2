# Environment
NODE_ENV={{ env | default(environment | default('dev')) }}
PORT=8000

# Database
DB_HOST={{ db_host }}
DB_PORT=3306
DB_NAME={{ db_name }}
DB_SECRET_ARN=arn:aws:secretsmanager:{{ aws_region }}:{{ lookup('env', 'AWS_ACCOUNT_ID') }}:secret:lms/aurora/credentials-{{ env | default(environment | default('dev')) }}

# AWS
AWS_REGION={{ aws_region }}
S3_CERTIFICATES_BUCKET={{ s3_certificates }}
S3_RESOURCES_BUCKET={{ s3_resources }}
S3_SUBMISSIONS_BUCKET={{ s3_submissions_bucket }}

# JWT
JWT_SECRET={{ lookup('password', '/dev/null length=64 chars=ascii_letters,digits') }}
JWT_EXPIRATION=7d

# CORS
CORS_ORIGIN=https://{{ domain_name | default('*') }}

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL={{ log_level | default('info') }}
